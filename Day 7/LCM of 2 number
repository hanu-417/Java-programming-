class LCM {
    public static void main(String[] args) {
        int a = 4, b = 6, lcm;

        lcm = (a > b) ? a : b;

        while (true) {
            if (lcm % a == 0 && lcm % b == 0) {
                System.out.println("LCM = " + lcm);
                break;
            }
            lcm++;
        }
    }
}
